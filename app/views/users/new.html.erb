<body>
  <h1>New Route for Users</h1>

  <%= form_with model: @user do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <%= form.submit %>
  <% end %>

  <% if @user && @user.errors.any? %>
    <div id="errors">
      <p><%= pluralize(@user.errors.count, "error") %> prohibited the account from being created.</p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</body>
